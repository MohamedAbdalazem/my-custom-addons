<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partial_reconcile_wizard_form" model="ir.ui.view">
        <field name="name">account.partial.reconcile.wizard.form</field>
        <field name="model">account.partial.reconcile.wizard</field>
        <field name="arch" type="xml">
            <form string="Partial Reconcile">
                <group>
                    <field name="journal_id"/>
                    <field name="writeoff_account_id"/>
                    <field name="label"/>
                    <field name="date"/>
                </group>
                <footer>
                    <button name="action_partial_reconcile" string="Apply and Reconcile" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_partial_reconcile_wizard" model="ir.actions.act_window">
        <field name="name">Partial Reconcile</field>
        <field name="res_model">account.partial.reconcile.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
