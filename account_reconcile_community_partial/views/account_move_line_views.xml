<odoo>
    <record id="view_move_line_tree_reconcile" model="ir.ui.view">
        <field name="name">account.move.line.reconcile.view</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='debit']" position="before">
                <button name="action_manual_reconcile"
                        type="object"
                        string="Reconcile"
                        class="oe_highlight"/>
                <button name="action_open_partial_reconcile_wizard"
                        type="object"
                        string="Partial Reconcile"
                        class="oe_secondary"/>
            </xpath>
        </field>
    </record>
</odoo>
