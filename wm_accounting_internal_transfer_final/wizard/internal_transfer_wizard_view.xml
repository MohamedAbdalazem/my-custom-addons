<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_internal_transfer_wizard_form" model="ir.ui.view">
        <field name="name">internal.transfer.wizard.form</field>
        <field name="model">internal.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="تحويل داخلي">
                <group>
                    <field name="source_journal_id"/>
                    <field name="destination_journal_id"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="date"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button string="تحويل" type="object" name="action_post" class="btn-primary"/>
                    <button string="إلغاء" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_internal_transfer_wizard" model="ir.actions.act_window">
        <field name="name">تحويل داخلي</field>
        <field name="res_model">internal.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
