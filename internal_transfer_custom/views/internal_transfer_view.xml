<odoo>
    <record id="view_internal_transfer_form" model="ir.ui.view">
        <field name="name">internal.transfer.form</field>
        <field name="model">internal.transfer</field>
        <field name="arch" type="xml">
            <form string="Internal Transfer">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="from_journal_id"/>
                        <field name="to_journal_id"/>
                        <field name="amount"/>
                    </group>
                    <footer>
                        <button name="action_transfer" type="object" string="Transfer" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="internal_transfer_tree" model="ir.ui.view">
        <field name="name">internal.transfer.tree</field>
        <field name="model">internal.transfer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="from_journal_id"/>
                <field name="to_journal_id"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_internal_transfer_root" 
              name="Internal Transfer" 
              parent="account.menu_finance"
              action="action_internal_transfer"/>

    <record id="action_internal_transfer" model="ir.actions.act_window">
        <field name="name">Internal Transfer</field>
        <field name="res_model">internal.transfer</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
