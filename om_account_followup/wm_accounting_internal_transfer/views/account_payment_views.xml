<odoo>

    <record id="view_account_payment_form_internal_transfer" model="ir.ui.view">
        <field name="name">account.payment.form.internal.transfer</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group" position="inside">
                <group string="Internal Transfer">
                    <field name="is_internal_transfer"/>
                    <field name="destination_journal_id"
                           invisible="not is_internal_transfer"
                           required="is_internal_transfer"/>
                </group>
            </xpath>

        </field>
    </record>

    <record id="view_account_payment_search_internal_transfer" model="ir.ui.view">
        <field name="name">account.payment.search.internal.transfer</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">

            <xpath expr="//filter[@name='outbound_filter']" position="after">
                <filter string="Internal Transfers"
                        name="internal_transfer_filter"
                        domain="[('is_internal_transfer','=',True)]"/>
            </xpath>

        </field>
    </record>

</odoo>
