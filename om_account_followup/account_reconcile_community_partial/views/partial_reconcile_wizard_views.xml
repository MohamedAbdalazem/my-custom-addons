<odoo>
    <record id="view_partial_reconcile_wizard_form" model="ir.ui.view">
        <field name="name">account.partial.reconcile.wizard.form</field>
        <field name="model">account.partial.reconcile.wizard</field>
        <field name="arch" type="xml">
            <form string="Partial Reconcile (Write-Off)">
                <sheet>
                    <group>
                        <field name="journal_id"/>
                        <field name="writeoff_account_id"/>
                        <field name="label"/>
                        <field name="date"/>
                    </group>
                    <footer>
                        <button string="Apply and Reconcile" type="object" name="action_apply_writeoff_and_reconcile" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
